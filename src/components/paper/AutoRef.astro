---
import { SectionMap } from './SectionMap';

interface Props {
  label: string;
  map: SectionMap;
}

const { label, map } = Astro.props as Props;

const { index, type } = map.getLabel(label);
---

<a class="whitespace-nowrap" href={'#' + SectionMap.sanitizeLabel(label)}
  >{type} {(index.length > 0 ? index : ['??']).join('.')}</a
>
